@using TheatreWebApp.Models.Seats

@model CategoryFormModel

@{
    ViewData["Title"] = "Edit Seats";
}

<h2 class="text-center">Edit seats</h2>

<table class="table">

    <thead>
        <tr>
            <th>Number of seats</th>
            <th>Category</th>
            <th>Selected seats</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var category in Model.SeatsCategories)
            {
                <tr>
                    <td>
                        @category.SeatsCount
                    </td>
                    <td>
                        @category.CategoryName
                    </td>
                    <td>
                        @category.Seats
                    </td>
                    <td>
                        @category.Price
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<div class="col-sm-12 offset-lg-2 col-lg-8">
    <form method="post">
        <div class="form-group">
            <label asp-for="CategoryNameInput">Set category of selected seats to:</label>
            <input asp-for="CategoryNameInput" type="text" class="form-control" placeholder="Category name...">
            <span asp-validation-for="CategoryNameInput" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PriceInput">Set price of the category:</label>
            <input asp-for="PriceInput" type="text" class="form-control" placeholder="00.00">
            <span asp-validation-for="PriceInput" class="small text-danger"></span>
        </div>
        <input class="btn btn-primary" type="submit" value="Save changes">
    </form>
</div>
