@using TheatreWebApp.Models.Shows

@model EditShowFormModel

@{
    ViewData["Title"] = "Edit Show";
}


<form method="post">
    <div class="col-sm-12 offset-lg-2 col-lg-8">
        <h2 class="text-center">Add show</h2>

        <div class="form-group">
            <label asp-for="Date">Date</label>
            <input asp-for="Date" class="form-control" placeholder="dd/MM/yyyy">
            <span asp-validation-for="Date" class="small text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Time">Time</label>
            <select asp-for="Time" class="form-control">
                <option value="19:00">19:00</option>
                <option value="20:00">20:00</option>
                <option value="21:00">21:00</option>
            </select>
            <span asp-validation-for="Time" class="small text-danger"></span>
        </div>

        <input type="hidden" asp-for="Id" value="@Model.Id">
        <input class="btn btn-primary" type="submit" value="Submit">
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
