@using TheatreWebApp.Models.Plays

@model IEnumerable<AllPlaysViewModel>

@{
    ViewData["Title"] = "All Plays";
}

<h1>Plays</h1>

<p>
    <a asp-action="Add">Add Play</a>
</p>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShortDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShortDescription)
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Plays" asp-action="Edit" asp-route-playId="@item.Id">Edit</a>
                        <a class="btn btn-primary" asp-controller="Plays" asp-action="Details" asp-route-playId="@item.Id">Details</a>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>
